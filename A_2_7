import java.util.Scanner;
public class A_2_7{

    public static void main(String[] args) {
        try (Scanner sc = new Scanner (System.in)) {
            int n = sc.nextInt();
            if (n<=100 && n%2!=0){
                for(int i=1;i<=n;i++){
                    for (int j=1;j<=i-1;j++){
                            System.out.print(" ");
                    }
                    System.out.println("*");
                    
                    System.out.println();
                }
               
                
            }
            else{
                System.out.println("Invalid");
            
            }
        }
    }
}
